<body>
  
    <div class="header">
        <div class="container">
            <div class="logo">
                <a href="index.html"><img src="~/web1/images/logo.jpg" title="" /></a>
            </div>
          
            
            <div class="clearfix"></div>
            <script>
					$("span.menu").click(function(){
					$(".top-menu ul").slideToggle("slow" , function(){
					});
					});
            </script>
           
        </div>
    </div>
  
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
               @foreach (var x in Model.Deger1)
               {

              
                <div class="single-grid">
                    <img src="@x.Blogimage" alt="" style="margin-bottom:20px" />
                    <br /><br />
                    <a href="/Blog/BlogDetay/@x.ID">@x.Baslik</a>

                    <p>
                       @x.Aciklama
                    </p>
                </div>

               }
            </div>

            <div class="col-md-4 side-content">
                <div class="recent">
                    <h3>SON BLOGLAR</h3>
                    @foreach (var y in Model.Deger3)
                    {

                   
                    <ul>
                        <li><a href="/Blog/BlogDetay/@y.ID">@y.Baslik</a></li>
                        
                    </ul>
                    }
                </div>
                <div class="comments">
                    <h3>SON YORUMLAR</h3>
                    @foreach (var z in Model.Deger4)
                    {

                   
                    <ul>
                        <li><a href="/Blog/BlogDetay/@z.ID">@z.KullaniciAdi</a> </li>
                        
                    </ul>
                    }
                </div>
                <div class="clearfix"></div>
                
                
                <div class="clearfix"></div>
